@model IEnumerable<CLDV6211POEPART1.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

@if (TempData["ErrorMessage"] != null)
{ 
    <div class="alert alert-danger">

        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">

        @TempData["SuccessMessage"]
    </div>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.ImageURL) *@
            @* </th> *@
            <th>
                VenueImage
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageURL)) {
                        <img src="@item.ImageURL" alt="Vene Image" width="150" height="150" style="object-fit:cover; border-radius:8px"/>
                    } else{<span>no image</span>}
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenueID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VenueID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VenueID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
