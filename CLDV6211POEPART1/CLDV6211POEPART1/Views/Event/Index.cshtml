@model IEnumerable<CLDV6211POEPART1.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="get" class="mb-4">
    <div class="col-md-3">
        <label>Venue</label>
        <select name="venueId" class="form-control">
            <oprion value="">Venues</oprion>
            @foreach(var venue in (List<Venue>)ViewData["Venues"]){
                <option value="@venue.VenueID">@venue.VenueName</option>
                }
        </select>
    </div>
    <div class="mt-2">
        <div class="col-md-3">
            <label>Start Date</label>
            <input type="date" name="startDate" class="form-control"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>End date</label>
            <input type="date" name="endDate" class="form-control" />
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a href="/Event/Index" class="btn btn-primary">Clear</a>
        </div>
    </div>
    
</form>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">

        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">

        @TempData["SuccessMessage"]
    </div>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VenueID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
